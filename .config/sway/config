exec mako
exec nm-applet --indicator
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 
exec ibus-daemon -drx
exec redshift -l 42:-71 -m wayland
exec_always sudo chrt -p --rr -a -v -R 99 $(pidof sway Xwayland)

output eDP-1 pos 4160 0
output eDP-1 scale 2
output DP-2 pos 1600 0
output DP-1 pos 0 0
bindsym Pause exec swaylock
